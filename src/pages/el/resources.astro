---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { useTranslations, type Language } from "../../i18n/translations";
import resourcesImg from "../../assets/resources.png";

const lang: Language = "el";
const t = useTranslations(lang);

// Resources will be populated as the project progresses
const resources = [
    {
        category: "Educational Materials",
        items: [
            {
                title: "Educational Guide",
                description:
                    "Comprehensive guide on cycling for inclusion (coming in 2026)",
                status: "coming",
                file: null,
            },
            {
                title: "Training Modules",
                description:
                    "Professional training materials for youth workers",
                status: "coming",
                file: null,
            },
        ],
    },
    {
        category: "Project Documents",
        items: [
            {
                title: "Project Summary",
                description:
                    "Overview of the CYCLOS project objectives and approach",
                status: "available",
                file: "/documents/project-summary.pdf",
            },
        ],
    },
    {
        category: "Digital Tools",
        items: [
            {
                title: "Learning Platform",
                description:
                    "Digital application for cycling education (in development)",
                status: "coming",
                file: null,
            },
        ],
    },
];
---

<BaseLayout title={t("nav.resources")} lang={lang}>
    <!-- Hero -->
    <section class="relative text-white py-16 md:py-24 overflow-hidden">
        <div class="absolute inset-0">
            <img
                src={resourcesImg.src}
                alt=""
                class="w-full h-full object-cover object-center"
            />
            <div
                class="absolute inset-0 bg-gradient-to-br from-blue-900/80 to-blue-800/80"
            >
            </div>
        </div>
        <div class="container-wide relative z-10">
            <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">
                {t("resources.title")}
            </h1>
            <p class="text-xl text-blue-100 max-w-3xl drop-shadow-md">
                {t("resources.subtitle")}
            </p>
        </div>
    </section>

    <!-- Resources -->
    <section class="section">
        <div class="container-wide">
            <div class="space-y-12">
                {
                    resources.map((category) => (
                        <div>
                            <h2 class="text-2xl font-bold mb-6 flex items-center">
                                <svg
                                    class="w-6 h-6 mr-3 text-lime-600"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M5 19a2 2 0 01-2-2V7a2 2 0 012-2h4l2 2h4a2 2 0 012 2v1M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H9a2 2 0 00-2 2v5a2 2 0 01-2 2z"
                                    />
                                </svg>
                                {category.category}
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                {category.items.map((item) => (
                                    <div class="card p-6">
                                        <div class="flex items-start justify-between mb-4">
                                            <div class="w-12 h-12 bg-lime-100 rounded-lg flex items-center justify-center">
                                                <svg
                                                    class="w-6 h-6 text-lime-600"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                                                    />
                                                </svg>
                                            </div>
                                            {item.status === "coming" && (
                                                <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">
                                                    {t("resources.comingSoon")}
                                                </span>
                                            )}
                                        </div>
                                        <h3 class="font-semibold text-lg mb-2">
                                            {item.title}
                                        </h3>
                                        <p class="text-gray-600 text-sm mb-4">
                                            {item.description}
                                        </p>
                                        {item.status === "available" &&
                                        item.file ? (
                                            <a
                                                href={item.file}
                                                class="btn-primary text-sm py-2"
                                                download
                                            >
                                                <svg
                                                    class="w-4 h-4 mr-2"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                                                    />
                                                </svg>
                                                {t("resources.download")}
                                            </a>
                                        ) : (
                                            <button
                                                disabled
                                                class="btn bg-gray-100 text-gray-400 cursor-not-allowed text-sm py-2"
                                            >
                                                {t("resources.comingSoon")}
                                            </button>
                                        )}
                                    </div>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Info Section -->
    <section class="section-alt">
        <div class="container-narrow text-center">
            <div class="card p-8">
                <svg
                    class="w-16 h-16 mx-auto text-lime-400 mb-4"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                    ></path>
                </svg>
                <h2 class="text-2xl font-bold mb-4">Resources Coming Soon</h2>
                <p class="text-gray-600 mb-6">
                    {t("resources.noResources")} As the project progresses through
                    its 30-month timeline, educational materials, guides, and digital
                    tools will be made available here for download.
                </p>
                <p class="text-gray-600">Expected resources include:</p>
                <ul class="text-left max-w-md mx-auto mt-4 space-y-2">
                    <li class="flex items-center text-gray-600">
                        <svg
                            class="w-5 h-5 mr-2 text-lime-500"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                        Educational guide in 5 languages
                    </li>
                    <li class="flex items-center text-gray-600">
                        <svg
                            class="w-5 h-5 mr-2 text-lime-500"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                        Training modules for professionals
                    </li>
                    <li class="flex items-center text-gray-600">
                        <svg
                            class="w-5 h-5 mr-2 text-lime-500"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                        Digital learning platform
                    </li>
                    <li class="flex items-center text-gray-600">
                        <svg
                            class="w-5 h-5 mr-2 text-lime-500"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 5l7 7-7 7"></path>
                        </svg>
                        Best practices documentation
                    </li>
                </ul>
            </div>
        </div>
    </section>
</BaseLayout>
