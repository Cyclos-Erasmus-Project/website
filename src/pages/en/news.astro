---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { useTranslations, type Language } from '../../i18n/translations'

const lang: Language = 'en'
const t = useTranslations(lang)

// Placeholder news items - these would typically come from a content collection
const newsItems = [
  {
    slug: 'project-launch',
    title: 'CYCLOS Project Officially Launches',
    date: '2025-09-01',
    excerpt: 'The CYCLOS project has officially begun, bringing together four partner organizations from France, Romania, Austria, and Greece to promote youth inclusion through cycling.',
    image: null
  },
  {
    slug: 'partnership-meeting',
    title: 'First Partnership Meeting Announced',
    date: '2025-09-15',
    excerpt: 'Partners will convene for the first transnational meeting to kick off project activities and establish work package timelines.',
    image: null
  }
]

function formatDate(dateString: string): string {
  const date = new Date(dateString)
  return date.toLocaleDateString(lang, { year: 'numeric', month: 'long', day: 'numeric' })
}
---

<BaseLayout title={t('nav.news')} lang={lang}>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-blue-600 via-blue-700 to-blue-800 text-white py-16 md:py-24">
    <div class="container-wide">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">{t('news.title')}</h1>
      <p class="text-xl text-blue-100 max-w-3xl">
        {t('news.subtitle')}
      </p>
    </div>
  </section>

  <!-- News List -->
  <section class="section">
    <div class="container-wide">
      {newsItems.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {newsItems.map((item) => (
            <article class="card hover:shadow-lg transition-shadow">
              <div class="h-48 bg-gradient-to-br from-lime-100 to-blue-100 flex items-center justify-center">
                <svg class="w-16 h-16 text-lime-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <div class="p-6">
                <time class="text-sm text-gray-500" datetime={item.date}>
                  {formatDate(item.date)}
                </time>
                <h2 class="text-xl font-semibold mt-2 mb-3">
                  <a href={`/${lang}/news/`} class="hover:text-lime-600 transition-colors">
                    {item.title}
                  </a>
                </h2>
                <p class="text-gray-600 mb-4">{item.excerpt}</p>
                <a href={`/${lang}/news/`} class="text-lime-600 font-medium hover:text-lime-700 inline-flex items-center">
                  {t('news.readMore')}
                  <svg class="w-4 h-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
          </svg>
          <p class="text-gray-500 text-lg">{t('news.noNews')}</p>
          <p class="text-gray-400 mt-2">Check back soon for project updates!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="section-alt">
    <div class="container-narrow text-center">
      <h2 class="text-2xl font-bold mb-4">Stay Updated</h2>
      <p class="text-gray-600 mb-6">
        Follow the CYCLOS project progress and receive updates about our activities, events, and resources.
      </p>
      <a href={`/${lang}/contact/`} class="btn-primary">
        {t('nav.contact')}
      </a>
    </div>
  </section>
</BaseLayout>
